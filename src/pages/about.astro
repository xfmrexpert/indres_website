---
import Features from '~/components/widgets/Features.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Features3 from '~/components/widgets/Features3.astro';
import Hero from '~/components/widgets/Hero.astro';
import Stats from '~/components/widgets/Stats.astro';
import Steps2 from '~/components/widgets/Steps2.astro';
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';

const metadata = {
  title: 'About us',
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    tagline="About us"
    image={{
      src: '~/assets/images/tfmr.jpg',
      alt: 'Transformer Image',
    }}
  >
    <Fragment slot="title">
      Providing expert power transformer engineering services
    </Fragment>

    <Fragment slot="subtitle">
      Mr. Raymond is a transformer R&D engineer with over 20 years of experience in all phases of transformer application, specification, 
      design, testing, operation, and maintenance. Extensive experience in utility asset analytics, working at the 
      intersection of data science and asset engineering. High voltage test experience. Capable of developing and 
      implementing engineering methodologies in a variety of software platforms.
    </Fragment>
  </Hero>

  <Features
    title="Transformer Expertise"
    columns={2}
    items={[
        {title: "Condition Assessment & Fleet Management"},
        {title: "Thermal Modeling & Rating"},
        {title: "Field Diagnostic Testing & Evaluation"},
        {title: "Failure Investigation"},
        {title: "Bushings"},
        {title: "LTC Diagnostics & Maintenance"},
        {title: "On-site Inspections & Quality Control Audits"},
        {title: "Witness of Factory Acceptance Testing"}
      ]}
  />

  <!-- Features2 Widget ************** -->

  <!-- HeroText Widget ******************* -->

  <HeroText tagline="Contact" title="Let's Connect!" />

  <!-- Features2 Widget ************** -->

  <Features2
    title="We are here to help!"
    items={[
      {
        title: 'Phone',
        description: '+1 (518) 229-0194',
        icon: 'tabler:headset',
      },
      {
        title: 'Email',
        description: 'tcraymond@inductivereasoning.com',
        icon: 'tabler:mail',
      },
      {
        title: 'Location',
        description: '707 Swaggertown Rd., Glenville, NY 12302',
        icon: 'tabler:map-pin',
      },
    ]}
  />

</Layout>
